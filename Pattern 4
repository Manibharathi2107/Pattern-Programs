import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    int n=sc.nextInt();
	    for(int i=n;i>=1;i--){
	        for(int j=1;j<=n;j++){
	            System.out.print(i+" ");
	        }
	        n--;
	        System.out.println();
	    }
		
	}
}

Output:

7 7 7 7 7 7 7
6 6 6 6 6 6
5 5 5 5 5
4 4 4 4
3 3 3
2 2
1
